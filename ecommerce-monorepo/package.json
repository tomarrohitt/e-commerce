{
  "name": "ecommerce-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "setup": "pnpm install && pnpm prisma:generate && pnpm prisma:migrate",
    "build": "pnpm -r build",
    "build:apps": "pnpm -r --filter ./apps/* build",
    "start": "pnpm -r --parallel --filter './apps/*' start",
    "build:packages": "pnpm -r --filter ./packages/* build",
    "prisma:generate": "pnpm -r --filter './apps/*' --if-present run prisma:generate",
    "prisma:migrate": "pnpm -r --filter './apps/*' --if-present run prisma:migrate",
    "prisma:push": "pnpm -r --filter './apps/*' --if-present run prisma:push",
    "dev": "turbo run dev"
  },
  "devDependencies": {
    "prettier": "latest",
    "tsx": "^4.21.0",
    "turbo": "^2.6.1",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "tsconfig-paths": "^4.2.0"
  },
  "pnpm": {
    "overrides": {
      "prisma": "7.3.0",
      "@prisma/client": "7.3.0",
      "@prisma/adapter-pg": "7.3.0"
    },
    "packageExtensions": {
      "@prisma/client": {
        "peerDependencies": {
          "prisma": "*"
        }
      }
    }
  }
}
